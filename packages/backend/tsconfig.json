{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./",
		"exactOptionalPropertyTypes": false, // TODO
		"experimentalDecorators": true,
		"isolatedModules": true,
		"lib": ["esnext"],
		"noEmit": true,
		"noLib": false,
		"noUncheckedIndexedAccess": false, // TODO
		"noUnusedLocals": false, // TODO
		"noUnusedParameters": false, // TODO
		"paths": {
			"@/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"rootDir": "./",
		"strictPropertyInitialization": false, // TODO
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"types": ["node"]
	},
	"extends": ["../shared/tsconfig.json", "@tsconfig/node-lts/tsconfig.json"],
	"include": ["./src/**/*.ts"]
}
