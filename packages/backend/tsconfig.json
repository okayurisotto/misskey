{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./",
		"exactOptionalPropertyTypes": false, // TODO
		"experimentalDecorators": true,
		"isolatedModules": true,
		"lib": ["esnext"],
		"module": "ESNext",
		"noEmit": true,
		"noLib": false,
		"noPropertyAccessFromIndexSignature": false, // TODO
		"noUncheckedIndexedAccess": false, // TODO
		"noUnusedLocals": false, // TODO
		"noUnusedParameters": false, // TODO
		"paths": {
			"@/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"rootDir": "./src",
		"strictPropertyInitialization": false, // TODO
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"types": ["node"]
	},
	"exclude": ["./src/**/*.test.ts"],
	"extends": [
		"@tsconfig/node-lts/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"include": ["./src/**/*.ts"]
}
